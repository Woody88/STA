/ ---Start of Schedule Tak
.row
  .col-md-7
    .panel.panel-default
      .panel-body.text-center
        -if work_today?(@today_task)
          %h1
            %em 
              = "#{@today_task.position} #{@today_task.start_time.to_s(:time)} - #{@today_task.finish_time.to_s(:time)}"
        -else
          %h1 You are Off today!
      .panel-footer
        Schedule Task 
  .col-md-5#trades-info
    = render 'trade_center_info'
/ ---End 

