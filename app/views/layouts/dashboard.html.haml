!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title
      =yield(:title) 

    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    .navbar.navbar-default.navbar-fixed-top
      .container-fluid
        .navbar-header
          %a.navbar-brand{:href => "#"}><
            STA
            %small>< Center
        %ul.nav.navbar-nav.navbar-right
          %li
            %a{:href => "#"} About
          %li
            %a{:href => "#"} Contact       
          
          -if user_signed_in?
            %li
              = link_to profile_path(current_user) do
                %span.glyphicon.glyphicon-cog
                Account 

            %li
              = link_to signout_path, {:method => :delete} do
                %span.glyphicon.glyphicon-log-out
                Logout
          -else     
            %li
              = link_to signin_path do
                %span.glyphicon.glyphicon-log-in
                Login
            %li
              = link_to signup_path do
                %span.glyphicon.glyphicon-user
                Sign Up

.container-fluid.profile
  .row
    .col-md-3
      .panel.panel-default.logo
        .panel-body
          .profile-pic
            %img{:src => "http://www.gravatar.com/avatar/00000000000000000000000000000000?d=mm&f=y"}
          %h4 Welcome, #{profile.fname}

      .panel.panel-default
        .panel-heading Menu
        .panel-body
          %ul.nav.nav-pills.nav-stacked
            %li
              = link_to "News", news_feeds_path
            %li
              %a{:href => "#"} Trade Center
            %li
              %a{:href => "#"} Calendar
            %li
              %a{:href => "#"} Aeronet
            %li
              %a{:href => "#"} Air Canada
    
    .col-md-9
      .panel.panel-default.dash-content
        .panel-heading
          Profile Account
        .panel-body
          = yield
        