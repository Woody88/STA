!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title
      =yield(:title) 

    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body

.container-fluid.profile
  .row
    .col-md-3
      .panel.panel-default.logo
        .panel-body
          .profile-pic
            = image_tag avatar_url(current_user)
          %h4 Welcome, #{profile.fname}

      .panel.panel-default
        .panel-heading Menu
        .panel-body
          %ul.nav.nav-pills.nav-stacked
            %li
              = link_to "News", news_feeds_path
            %li
              %a{:href => "#"} Trade Center
            %li
              = link_to "Calendar", calendar_index_path
            %li
              %a{:href => "https://my.aircanada.ca"} Aeronet
            %li
              %a{:href => "http ://aircanada.ca"} Air Canada
    
    .col-md-6
      = yield
        